<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="4.0">

<servlet>
<servlet-name>ResisterServlet</servlet-name>
<servlet-class>com.siddique.servlet.RegistrationServlet</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>ResisterServlet</servlet-name>
<url-pattern>/register</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>LoginServlet</servlet-name>
<servlet-class>com.siddique.servlet.LoginServlet</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>LoginServlet</servlet-name>
<url-pattern>/login</url-pattern>
</servlet-mapping>

<servlet>
<servlet-name>LogoutServlet</servlet-name>
<servlet-class>com.siddique.servlet.LogoutServlet</servlet-class>
</servlet>

<servlet-mapping>
<servlet-name>LogoutServlet</servlet-name>
<url-pattern>/logout</url-pattern>
</servlet-mapping>

</web-app>